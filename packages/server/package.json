{
  "name": "@cabezonidas/shop-server",
  "version": "0.0.1",
  "description": "backend project for shop",
  "keywords": [
    "express",
    "nosql",
    "graphql"
  ],
  "author": "Cabe <sebastian.scd@gmail.com>",
  "homepage": "https://github.com/cabezonidas/shop#readme",
  "license": "ISC",
  "main": "lib/server.js",
  "directories": {
    "lib": "lib",
    "test": "__tests__"
  },
  "files": [
    "lib"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cabezonidas/shop.git"
  },
  "scripts": {
    "test": "echo \"Error: run tests from root\" && exit 1",
    "tsc": "tsc",
    "prebuild": "tslint -c ../../tslint.json -p tsconfig.json --fix",
    "build": "tsc",
    "prestart": "npm run build",
    "start": "node -r ts-node/register ./src/server.ts",
    "start:watch": "nodemon",
    "typeorm": "./node_modules/.bin/typeorm"
  },
  "bugs": {
    "url": "https://github.com/cabezonidas/shop/issues"
  },
  "typings": "lib/server.d.ts",
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@cabezonidas/shop-common": "*",
    "apollo-server-express": "^2.9.14",
    "cookie-parser": "^1.4.4",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "graphql": "^14.5.8",
    "mongoose": "^5.7.12",
    "reflect-metadata": "^0.1.13",
    "ts-node": "^8.4.1",
    "typeorm": "^0.2.21"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.2",
    "@types/express": "^4.17.1",
    "@types/mongoose": "^5.5.32",
    "@types/node": "^12.12.21",
    "nodemon": "^1.19.3"
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git"
    ],
    "watch": [
      "src"
    ],
    "exec": "npm start",
    "ext": "ts"
  }
}
